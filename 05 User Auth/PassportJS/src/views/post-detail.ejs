<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="/home.css">

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

<%- include('header'); -%>

<div class="container gedf-wrapper">
  <div class="row">
    <div class="col-md-8 offset-2 gedf-main">
      <div class="card gedf-card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">
              <div class="mr-2">
                <img class="rounded-circle" width="45" src="https://bit.ly/2m7Kx5P" alt="avatar">
              </div>
              <div class="ml-2">
                <div class="h5"><%= post.poster.name %></div>
              </div>
            </div>
            <div class="text-muted h7 mb-2">
              <i class="fa fa-clock-o"></i>
              <%= post.created.getDate() %>/<%= post.created.getMonth() %>/<%= post.created.getFullYear() %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <a class="card-link" href="/post/<%= post._id %>">
            <h5 class="card-title"><%= post.title %></h5>
          </a>
          <p class="card-text"><%= post.content %></p>
        </div>
      </div>
      <% if (isPoster) { %>
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletePost">Delete</button>
      <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#editPost">Edit</button>
      <% } %>

      <div class="modal fade" id="deletePost" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">You want delete this post</div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
              <a href="/post/<%= post._id %>/delete"><button type="button" class="btn btn-danger">Yes</button></a>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="editPost" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit post</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/post/<%= post._id %>" method="POST">
                <div class="form-group">
                  <input type="text" class="form-control" name="title" value="<%= post.title %>">
                </div>
                <div class="form-group">
                  <textarea class="form-control" name="content" rows="5"><%= post.content %></textarea>
                </div>
                <div class="form-group btn-toolbar justify-content-between">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>